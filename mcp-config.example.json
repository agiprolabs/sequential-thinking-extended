{
  "mcpServers": {
    "devpattern": {
      "_comment": "Local Node.js - STDIO transport",
      "command": "node",
      "args": ["dist/index.js"],
      "cwd": "/path/to/devpattern",
      "env": {
        "DATA_PATH": "./data",
        "TRANSPORT_MODE": "stdio",
        "DISABLE_THOUGHT_LOGGING": "false"
      },
      "disabled": false,
      "alwaysAllow": [
        "sequentialthinking",
        "get_thinking_context",
        "list_thinking_sessions"
      ]
    },
    "devpattern-docker-stdio": {
      "_comment": "Docker container - STDIO transport",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e", "TRANSPORT_MODE=stdio",
        "-v", "/path/to/data:/data",
        "ghcr.io/agiprolabs/devpattern:latest"
      ],
      "disabled": true,
      "alwaysAllow": [
        "sequentialthinking",
        "get_thinking_context",
        "list_thinking_sessions"
      ]
    },
    "devpattern-http": {
      "_comment": "HTTP transport - connects to running server (for cloud/multi-tenant)",
      "url": "http://localhost:3000/mcp",
      "disabled": true,
      "alwaysAllow": [
        "sequentialthinking",
        "get_thinking_context",
        "list_thinking_sessions"
      ]
    }
  }
}
