{
  "name": "devpattern",
  "version": "0.2.0",
  "description": "DevPattern MCP server - Sequential thinking with context persistence, task management, and HTTP transport",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "devpattern": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:http": "TRANSPORT_MODE=http node dist/index.js",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.0",
    "chalk": "^5.3.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^22.19.1",
    "@vitest/coverage-v8": "^2.1.8",
    "typescript": "^5.3.3",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "mcp",
    "devpattern",
    "sequential-thinking",
    "ai",
    "context-management"
  ],
  "license": "MIT"
}
